// Firebase Firestore Security Rules for Nirvana IoT
// Copy these rules to your Firebase Console -> Firestore Database -> Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Categories collection
    match /categories/{categoryId} {
      // Anyone can read active categories
      allow read: if true;
      // Only authenticated users can create, update, delete
      allow create, update, delete: if request.auth != null;
    }
    
    // Products collection
    match /products/{productId} {
      // Anyone can read active products
      allow read: if true;
      // Only authenticated users can create, update, delete
      allow create, update, delete: if request.auth != null;
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Anyone can create orders (customers placing orders)
      allow create: if true;
      // Only authenticated users can read, update, delete orders
      allow read, update, delete: if request.auth != null;
    }
    
    // Contact messages collection (if you have one)
    match /contacts/{contactId} {
      // Anyone can create contact messages
      allow create: if true;
      // Only authenticated users can read, update, delete
      allow read, update, delete: if request.auth != null;
    }
    
    // Settings collection (for future use)
    match /settings/{settingId} {
      // Anyone can read settings
      allow read: if true;
      // Only authenticated users can write
      allow write: if request.auth != null;
    }
  }
}
